<body>

<div class="grid-container">
    <!-- Generate grid items -->
</div>

<div class="sidebar">
    <h2>Players</h2>
    <div class="player">
        <h3>Player 1</h3>
        <button onclick="startTradeTalks('Player 1')">Start Trade Talks</button>
        <button onclick="proposePolicy('Player 1')">Propose Policies</button>
        <button onclick="collaborate('Player 1')">Collaborate</button>
    </div>
    <div class="player">
        <h3>Player 2</h3>
        <button onclick="startTradeTalks('Player 2')">Start Trade Talks</button>
        <button onclick="proposePolicy('Player 2')">Propose Policies</button>
        <button onclick="collaborate('Player 2')">Collaborate</button>
    </div>
    <!-- Add more players as needed -->
</div>

<script>
    // Example data generation
    function generateGrid() {
        const grid = [];
        for (let i = 0; i < 10; i++) {
            grid[i] = [];
            for (let j = 0; j < 10; j++) {
                const randomNumber = Math.random();
                if (randomNumber < 0.3) {
                    grid[i][j] = "Empty";
                } else if (randomNumber < 0.6) {
                    grid[i][j] = "Yellow Star";
                } else {
                    grid[i][j] = "Nebula";
                }
            }
        }
        return grid;
    }

    const grid = generateGrid();

    // Render grid items
    for (let i = 0; i < 10; i++) {
        for (let j = 0; j < 10; j++) {
            const gridItem = document.createElement("div");
            gridItem.className = "grid-item";
            gridItem.textContent = grid[i][j];
            gridItem.addEventListener("mouseover", function() {
                if (grid[i][j] === "Yellow Star") {
                    const dropdown = document.createElement("div");
                    dropdown.className = "dropdown";
                    dropdown.innerHTML = `
                        <button>Planet 1</button>
                        <div class="dropdown-content">
                            <button>Ship 1</button>
                            <button>Ship 2</button>
                        </div>
                    `;
                    gridItem.appendChild(dropdown);
                }
            });
            gridItem.addEventListener("mouseout", function() {
                const dropdown = gridItem.querySelector(".dropdown");
                if (dropdown) {
                    dropdown.remove();
                }
            });
            document.querySelector(".grid-container").appendChild(gridItem);
        }
    }

    // Functions for sidebar buttons
    function startTradeTalks(player) {
        alert(`Starting trade talks with ${player}`);
    }

    function proposePolicy(player) {
        alert(`Proposing policies to ${player}`);
    }

    function collaborate(player) {
        alert(`Collaborating with ${player}`);
    }
</script>

</body>
</html>
